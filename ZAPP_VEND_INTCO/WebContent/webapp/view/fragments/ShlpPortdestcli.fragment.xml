<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>notRetrieveText}"
		title="{i18n>shlpPortdestcliTitlePortdestcli}"
		search="onSearchHelperPortdestcli"
		confirm="onConfirmShlpPortdestcli"
		items="{ 
				 path: 'detailDocumentView>/shlpPortdestcli'
			   }">
		<ColumnListItem>
			<cells>
				<Text text="{detailDocumentView>CodParceiro}" />
				<Text text="{detailDocumentView>Name}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>shlpPortdestcliLabelPortdestcli}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="{i18n>shlpPortdestcliLabelNamePortdestcli}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>