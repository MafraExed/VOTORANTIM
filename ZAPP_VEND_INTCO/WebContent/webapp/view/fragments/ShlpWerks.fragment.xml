<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>notRetrieveText}"
		title="{i18n>shlpWerksTitleWerks}"
		search="onSearchHelperWerks"
		confirm="onConfirmShlpWerks"
		items="{/ZET_FBSD_SearchPlantSet}">
		<ColumnListItem>
			<cells>
				<Text text="{Werks}" />
				<Text text="{Name1}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>shlpWerksLabelWerks}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="{i18n>shlpWerksLabelNameWerks}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>