<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" >
	<Dialog id="openDialog" title="Seleção do Empregado">
	
		<content>
			<Input id="pernr" placeholder="Matrícula" fieldWidth="20%" maxLength="8" required="true" width="100%" textAlign="Begin"/>
		</content>

		<beginButton>
			<Button text="Buscar Férias" press="onSave" type="Emphasized"/>
		</beginButton>
		<endButton>
			<Button text="Fechar" press="onCloseDialog" type="Default"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>