				<items>
					<StandardListItem class="sapUiSmallMarginEnd" type="Active" title="{filtroMaterial>DescMaterial}" description="CÃ³d. {filtroMaterial>Material}" info="{filtroMaterial>MatSelected}" infoState="Success"/>
