<core:FragmentDefinition xmlns:m="sap.m" xmlns="sap.uxap"
	xmlns:layout="sap.ui.layout" xmlns:sample="sap.uxap.sample.AnchorBar.block"
	height="100%" xmlns:mvc="sap.ui.core.mvc" xmlns:semantic="sap.m.semantic"
	xmlns:core="sap.ui.core" xmlns:footerbar="sap.ushell.ui.footerbar">

<m:Page 
	id="id"
	showHeader="false"
	enableScrolling="true"
	backgroundDesign="Standard"
	showFooter="false">
	
	<m:content>
	<m:TileContainer id="container" width="100%" height="800px"
		tiles="{/ZET_FBPM_DADOS_TILESSet}">
		<m:StandardTile icon="{Icon}"  number="{Number} {Scale}"
			numberUnit="{Numberunit}" title="{Title}" info="{Info}" infoState="{Infostate}"
			type="None" iconDensityAware="false" press="onClick" />

	</m:TileContainer>
	
	</m:content>

</m:Page>

	<!-- INFOSTATE: None, Error, Success & Warning TYPE: None, Create & Monitor -->
</core:FragmentDefinition>