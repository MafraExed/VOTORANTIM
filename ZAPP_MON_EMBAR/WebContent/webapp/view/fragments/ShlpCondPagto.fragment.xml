<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>notRetrieveText}"
		title="{i18n>shlpCondPagtoTitleUser}"
		search="onSearchHelperGlobal"
		confirm="onConfirmShlpZterm"
		items="{/ZET_FBSD_SearchCondPagtoSet}">
		<ColumnListItem>
			<cells>
				<Text text="{Zterm}" />
				<Text text="{Name1}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>shlpCondPagtoLabelUser}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="{i18n>shlpCondPagtoLabelNameUser}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>