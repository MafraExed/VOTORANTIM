<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>notRetrieveText}"
		title="{i18n>shlpRouteTitleRoute}"
		search="onSearchHelperRoute"
		confirm="onConfirmShlpRoute"
		items="{/ZET_FBSD_SearchItinerarySet}">
		<ColumnListItem>
			<cells>
				<Text text="{Route}" />
				<Text text="{Bezei}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>shlpRouteLabelRoute}"  />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="{i18n>shlpRouteLabelNameRoute}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>