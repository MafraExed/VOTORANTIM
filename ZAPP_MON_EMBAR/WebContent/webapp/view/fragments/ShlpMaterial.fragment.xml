<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>notRetrieveText}"
		title="{i18n>shlpMaterialTitleUser}"
		search="onSearchHelperGlobal"
		confirm="onConfirmShlpMatnr"
		items="{/ZET_FBSD_SearchMaterialSet}">
		<ColumnListItem>
			<cells>
				<Text text="{Matnr}" />
				<Text text="{Name1}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>shlpMaterialLabelUser}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="{i18n>shlpMaterialLabelNameUser}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>