<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<TableSelectDialog
		noDataText="{i18n>notRetrieveText}"
		title="{i18n>shlpIncotermsTitle}"
		search="onSearchHelperGlobal"
		confirm="onConfirmShlpIncoterms"
		items="{/ZET_FBSD_SearchIncoSet}">
		<ColumnListItem>
			<cells>
				<Text text="{Inco1}" />
				<Text text="{Bezei}" />
			</cells>
		</ColumnListItem>
		<columns>
			<Column>
				<header>
					<Text text="{i18n>shlpIncotermsLabel}" />
				</header>
			</Column>
			<Column
				minScreenWidth="Tablet"
				demandPopin="true" >
				<header>
					<Text text="{i18n>shlpIncotermsLabelDsc}" />
				</header>
			</Column>
		</columns>
	</TableSelectDialog>
</core:FragmentDefinition>