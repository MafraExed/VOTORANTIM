<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
		<f:SimpleForm
			editable="false"
			layout="ResponsiveGridLayout"
			title="Dados"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			
			<f:content>
				<Label text="Obra" design="Bold"/>
				<Text text="{Obra}" />
				<Label text="Endereço" design="Bold"/>
				<Text text="{Endereco}" />
				<Label text="Contrato" design="Bold"/>
				<Text text="{Contrato}" />
				<Label text="Data Extrato" design="Bold"/>
				<Text text="{DataExtrato}" />
				<Label text="Data confirmação de recebimento" design="Bold"/>
				<Text text="{DataConfReceb}" />
				<Label text="Hora confirmação de recebimento" design="Bold"/>
				<Text text="{HoraConfReceb}" />
				<Label text="Endereço de e-mail confirmação" design="Bold"/>
				<Link text="{EmailConf}" target="_blank"  href="mailto:{EmailConf}"/>
				<Label text="Status" design="Bold"/>
				<ObjectStatus class="sapUiSmallMarginBottom" text="{Status}" state="{TipoStatus}" />
			</f:content>
		</f:SimpleForm>
	</VBox>
</core:FragmentDefinition>