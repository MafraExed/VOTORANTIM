										<smartFilterBar:customControl>
											<m:Input showSuggestion="true" id="foo1" suggestionItems="{/ZET_GLHR_MATRICULASSet}" suggest="handleSuggest" editable="true"
												valueHelpRequest="onHelpMatriculas" showValueHelp="true">
