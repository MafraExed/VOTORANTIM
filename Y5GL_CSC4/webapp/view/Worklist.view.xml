												</m:suggestionItems>
											</m:Input>
										</smartFilterBar:customControl>
									</smartFilterBar:ControlConfiguration>
									<smartFilterBar:ControlConfiguration key="Status" id="idStatus" index="3" label="Estado" groupId="_BASIC" width="auto"
