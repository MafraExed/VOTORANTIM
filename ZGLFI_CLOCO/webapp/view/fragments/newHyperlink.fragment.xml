<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<Dialog title="Adicionar novo Hyperlink" type="Message" state="Information">
		<content>
			<f:SimpleForm>
				<f:content>
					<Label text="Nome do Hyperlink" labelFor="txtNomeHyperlink"/>
					<Input id="inputNomeHyperlink" showValueHelp="false" required="true"/>
					<Label text="Descrição do Hyperlink" labelFor="txtDescHyperlink" required="true"/>
					<Input id="inputDescHyperlink" showValueHelp="false"/>
					<Label text="URL (Endereço da internet)" labelFor="txtUrlHyperlink" required="true"/>
					<Input id="inputUrlHyperlink" showValueHelp="false"/>
				</f:content>
			</f:SimpleForm>
		</content>
		<beginButton>
			<Button text="Enviar" press="onLinkCreate" enabled="true"/>
		</beginButton>
		<endButton>
			<Button text="Cancelar" press="onCloseDialogLink"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>